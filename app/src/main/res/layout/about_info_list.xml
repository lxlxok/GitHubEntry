<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/id_about_iv"
        android:src="@drawable/github_48"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/id_about_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_alignTop="@+id/id_about_iv"
        android:layout_toRightOf="@+id/id_about_iv"
        android:layout_toEndOf="@+id/id_about_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/id_about_email"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:layout_below="@+id/id_about_name"
        android:layout_toRightOf="@+id/id_about_iv"
        android:layout_toEndOf="@+id/id_about_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20dp"
        android:id="@+id/id_about_company"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/id_about_email"
        android:layout_toRightOf="@+id/id_about_iv"
        android:layout_toEndOf="@+id/id_about_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="New Text"
        android:textSize="20dp"
        android:id="@+id/id_about_location"
        android:layout_below="@+id/id_about_company"
        android:layout_toRightOf="@+id/id_about_iv"
        android:layout_toEndOf="@+id/id_about_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/id_follower_num"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_below="@+id/id_about_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Followers"
        android:textSize="15dp"
        android:id="@+id/id_follower"
        android:layout_below="@+id/id_follower_num"
        android:layout_alignLeft="@+id/id_follower_num"
        android:layout_alignStart="@+id/id_follower_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:id="@+id/id_following_num"
        android:layout_alignTop="@+id/id_follower_num"
        android:layout_toRightOf="@+id/id_follower_num"
        android:layout_toEndOf="@+id/id_follower_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/id_following"
        android:layout_alignBottom="@+id/id_follower"
        android:layout_toRightOf="@+id/id_follower"
        android:layout_toEndOf="@+id/id_follower" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/id_repos_num"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_marginLeft="65dp"
        android:layout_above="@+id/id_follower"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repository"
        android:id="@+id/id_about_repos"
        android:textSize="15dp"
        android:layout_alignTop="@+id/id_follower"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewEmpty"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
