<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/id_issue_iv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/issue_open"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="content"
        android:textSize="21dp"
        android:id="@+id/id_issue_author"
        android:gravity="center"
        android:layout_alignBottom="@+id/id_issue_iv"
        android:layout_toRightOf="@+id/id_issue_iv"
        android:layout_toEndOf="@+id/id_issue_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="content"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/id_issue_time"
        android:gravity="center"
        android:layout_alignBottom="@+id/id_issue_author"
        android:layout_toRightOf="@+id/id_issue_author"
        android:layout_toEndOf="@+id/id_issue_author" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="19dp"
        android:textStyle="bold"
        android:id="@+id/id_issue_title"
        android:layout_above="@+id/id_issue_author"
        android:layout_toRightOf="@+id/id_issue_iv"
        android:layout_toEndOf="@+id/id_issue_iv" />

</RelativeLayout>
